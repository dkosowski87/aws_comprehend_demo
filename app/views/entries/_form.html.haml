= form_for [@journal, @entry] do |f|
  = label_tag(:title, "Title")
  = f.text_field :title
  = label_tag(:text, "Text")
  = f.text_area :text
  - if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
